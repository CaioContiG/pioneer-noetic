
<launch>
  <!-- Initializate the hokuyo laser -->
  <node name="hokuyo" pkg="hokuyo_node" type="hokuyo_node" respawn="false" output="screen"> 
    <param name="calibrate_time" type="bool" value="false"/> 
    <param name="port" type="string" value="/dev/ttyACM0"/>  
    <param name="intensity" type="bool" value="false"/>
  </node>

  <!-- Initializate the p2os_driver -->
  <node pkg="p2os_driver" type="p2os_driver" name="p2os_driver" output="screen">
      <param name="port" value="/dev/serial/by-id/usb-Prolific_Technology_Inc._USB-Serial_Controller_D-if00-port0" />
      <param name="use_sonar" value="true" />
      
  </node>

  <!-- Enable Motors -->
  <node name="rostopic" pkg="rostopic" type="rostopic" args="pub -1 /cmd_motor_state p2os_msgs/MotorState 1"/>

  <!-- URDF model -->
  <include file="$(find p2os_urdf)/launch/pioneer3at_urdf.launch" />

  <!-- laser transform -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0 0 0.1397 0 0 0 base_link laser 100" />

  <!-- camera transform -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0.2 0 -0.1 0 0 0 base_link camera_link 100" />

</launch>

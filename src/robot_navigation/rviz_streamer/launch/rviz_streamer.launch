<launch>
    <arg name="launch_rviz" default="1" />

    <node if="$(arg launch_rviz)" pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find rviz_streamer)/config/default.rviz"/>

    <node pkg="rviz_streamer" type="xstream.py" name="rviz_streamer" output="screen" respawn="true">
        <param name="window_name" value="RViz"/>
        <param name="rate" value="30"/>
		<param name="rotation" value="180"/>
    </node>

</launch>